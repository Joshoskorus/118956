<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Recommendations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Dietary Preferences -->
    <CheckBox
        android:id="@+id/vegetarianCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetarian"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/veganCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegan"
        android:layout_below="@id/vegetarianCheckbox"
        android:layout_marginTop="8dp" />

    <!-- Dietary Restrictions -->
    <CheckBox
        android:id="@+id/glutenFreeCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gluten-Free"
        android:layout_below="@id/veganCheckbox"
        android:layout_marginTop="8dp" />

    <!-- Health Goals -->
    <RadioGroup
        android:id="@+id/healthGoalsRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/glutenFreeCheckbox"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/weightLossRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Loss" />

        <RadioButton
            android:id="@+id/muscleGainRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Gain" />
    </RadioGroup>

    <!-- Recommend Diet Button -->
    <Button
        android:id="@+id/recommendDietButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommend Diet"
        android:layout_below="@id/healthGoalsRadioGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Recommendations TextView -->
    <TextView
        android:id="@+id/recommendationsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommendations will appear here"
        android:layout_below="@id/recommendDietButton"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

</RelativeLayout>



